<!DOCTYPE html>
<html>
<head>
  <title>Pug Life</title>
  <!-- <link href='https://fonts.googleapis.com/css?family=Pathway+Gothic+One|Raleway' rel='stylesheet' type='text/css'> -->
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <a href="#" id="mobile">&#9776;</a>
    <ul>
      <li><%= link_to 'puglife', root_path %></li>
      <% if current_user %>
        <li><%= link_to current_user.username, user_path(current_user) %></li>
        <li><%= link_to 'account', edit_user_path(current_user) %></li>
        <li><%= link_to 'logout', session_path('dummy'), method: :delete %></li>
      <% else %>
        <li><%= link_to 'login', login_path %></li>
        <li><%= link_to 'sign up', new_user_path %></li>
      <% end %>
    </ul>
  </nav>
  <%= yield %>
</body>
</html>
