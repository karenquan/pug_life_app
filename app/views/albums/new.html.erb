<div class="add container">
  <h1>Add New Album</h1>
  <%= form_for [@user, @album] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit 'Add Album' %>
  <% end %>
  <%= link_to 'Back to Profile', user_path(@user) %>
</div>
