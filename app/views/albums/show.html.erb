<h1><%= @album.title %></h1>
<p><%= @album.description %></p>
<span>By: <%= link_to @user.username, user_path(@album.user_id) %></span>


<% @images.each do |image| %>
  <div>
    <h2><%= image.title %></h2>
    <img src="<%= image.url %>" />
    <p><%= image.description %></p>
    <% if current_user.id == @user.id %>
      <p><%= link_to 'Edit', edit_image_path(:id => image.id) %> | <%= link_to 'Delete', image_path(:id => image.id), method: :delete, data: { confirm: 'Are you sure you want to delete this image?' } %></p>
    <% end %>
  </div>
<% end %>

<!-- add condition if user is current_user, allow edit/delete -->
<% if current_user.id == @user.id %>
  <%= link_to 'Edit Album', edit_album_path(:id => @album.id) %>
   |
  <%= link_to 'Delete Album', album_path(:id => @album.id), method: :delete, data: { confirm: 'Are you sure you want to remove this album?' } %>
   |
  <%= link_to 'Add Image', new_album_image_path(:album_id => @album.id) %>
   |
  <%= link_to 'Back to Profile', user_path(@user) %>
<% end %>
