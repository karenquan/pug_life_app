<h1><%= @album.title %></h1>

<%= form_for @album do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= f.submit 'Update' %>
<% end %>

<%= link_to 'Back to Album', album_path(:id => @album.id) %>
