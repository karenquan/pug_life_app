<div class="edit container">
  <h1><%= @album.title %></h1>
  <%= form_for @album do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit 'Update' %>
  <% end %>
  <%= link_to 'Back to Album', album_path(:id => @album.id) %>
</div>
